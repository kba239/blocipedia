<h3>User Email: <%= markdown(@user.email) %></h3>

<div class="row">
  <div class="col-md-8">
    <h3>Account Type: <%= markdown(@user.role) %></h3>
  </div>
  <div class="col-md-4">
    <% if @user.premium? %>
      <%= link_to 'Downgrade Account', downgrade_user_path(@user), class: 'btn btn-warning', method: :put %>
    <% elsif @user.standard? %>
      <%= link_to 'Upgrade Account', new_charge_path(@user), class: 'btn btn-success' %>
    <% end %>
  </div>
</div>
